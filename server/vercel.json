{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/api/index.js" },
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },
    {
      "src": "^/(auth|users|products|categories|orders|settings|contact)(.*)$",
      "dest": "/api/index.js"
    },
    { "src": "^/uploads/(.*)$", "dest": "/api/index.js" }
  ]
}
